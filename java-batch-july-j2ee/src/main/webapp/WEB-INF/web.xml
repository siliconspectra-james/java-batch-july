<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>getEmployee</servlet-name>
    <servlet-class>com.ssi.controller.GetEmployeeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getEmployee</servlet-name>
    <url-pattern>/get-employee</url-pattern>
  </servlet-mapping>

  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>postEmployee</servlet-name>
    <servlet-class>com.ssi.controller.PostEmployeeController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>postEmployee</servlet-name>
    <url-pattern>/post-employee</url-pattern>
  </servlet-mapping>
</web-app>
